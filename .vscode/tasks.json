{
    "version": "2.0.0",
    "tasks": [
        {
            "identifier": "build-all",
            "type": "npm",
            "script": "build-all",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "identifier": "test",
            "type": "npm",
            "script": "test",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "identifier": "build-tests",
            "type": "npm",
            "script": "build-tests",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "test"
        },
        {
            "identifier": "lint",
            "type": "npm",
            "script": "lint",
            "problemMatcher": {
                "owner": "tslint",
                "applyTo": "allDocuments",
                "fileLocation": "relative",
                "severity": "warning",
                "pattern": "$tslint5"
            }
        }
    ]
}