{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "stripInternal": true
  },
  "include": [
    "./src/**/*"
  ]
}